<%= render 'navbar' %>

<h2>Editar <%= current_user.email %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-sm-12">
     <div class="form-group">
       <%= f.label :email, :class => 'form-label'%>
       <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div> 
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(deixe em branco se não quiser alterar)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> caracteres mínimos </em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(precisamos de sua senha atual para confirmar suas alterações)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", :class => 'btn btn-primary' %>
    <%= link_to "Voltar", :back, :class => 'btn btn-primary' %>
  </div>
<% end %>


<h3>Excluir minha conta</h3>

<%= button_to "Cancele minha conta", registration_path(resource_name), data: { confirm: "tem certeza que deseja continuar?" }, method: :delete, :class => 'btn btn-danger' %>

