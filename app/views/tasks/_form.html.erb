<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div class="alert alert-danger" >
      <h5>Os campos abaixo não podem ficar em branco</h5>

    </div>
  <% end %>


<div class="mb-3">
    <%= form.label 'Nome', :class => 'form-label' %>
    <%= form.text_field :name, :class => 'form-control' %>
</div>

<div class="mb-3">
    <%= form.label 'Descrição', :class => 'form-label' %>
    <%= form.text_field :description, :class => 'form-control' %>
</div>

 <h4> Items </h4>

 <div id="items">
    <%= form.fields_for :items do |ff| %>

    <%= render 'item_fields', f: ff %>

    <% end %>

      <div class="links">
        <%= link_to_add_association 'Adicionar item', form, :items, :class => 'btn waves-effect waves-light blue right white-text' %>
        <br><br>
      </div>
  </div>   

<br>
<br>

<%= form.label 'Prioridade', :class => 'form-label' %>
<%= form.select :priority, [["Baixa", :baixa], ["Média", :media], ["Alta", :alta]], {}, {class: "form-control"} %>

<br>

<div class="mb-3">
    <%= form.label 'Anexar Arquivo', :class => 'form-label' %>
    <%= form.file_field :archive, :class => 'form-control' %>
</div>

<p>
  <label>
    <%= form.check_box(:completed) %>
     <span style="font-weight: bold;">Tarefa Finalizada</span>
  </label>
</p>


<br>
<br>

  <%= form.submit "To Do", :class => 'waves-effect waves-light btn'%>
  <%= link_to "Voltar", tasks_path, :class => 'waves-effect waves-light btn' %>

<% end %>



